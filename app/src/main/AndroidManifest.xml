<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.admin.theapp"

    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name=".HotelsApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".view.HotelsActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.HotelDetailsActivity"
            android:label="@string/hotel_details_activity_display_message"
            android:parentActivityName=".view.HotelsActivity" />
    </application>


</manifest>
